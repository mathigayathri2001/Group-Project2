{{!-- register page --}}
<body class="dark-bg">
  <section class="hero is-fullheight">
    <div class="hero-body">
      <form class="signon" id="signon-register">
        <div class="signon-bar">
          <span class="signon-bar-phone"></span>
        </div>
        <div class="signon-content">
          <header class="signon-header">
            <h1>Register Account</h1>
          </header>
          <div class="signon-inputs">
            <input class="signon-input" type="text" name="username" id="username" placeholder="Username">
            <input class="signon-input" type="email" name="email" id="email" placeholder="Email address">
            <input class="signon-input" type="password" name="password" id="password" placeholder="Password">
            <input class="signon-input" type="password" name="password-confirm" id="password-confirm" placeholder="Confirm Password">
          </div>
          <footer class="signon-footer">
            <a href="/login">Login</a>
            <button class="button">Register</button>
          </footer>
        </div>
      </form>
    </div>
  </section>
</body>